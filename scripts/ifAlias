BASE='.1.3.6.1.2.1.31.1.1.1.18'
ID=$(cut -d . -f 13 <<< $2)
cache=$(ip l)

if [ -z "$ID" ]; then
	ID=0
fi

if [ "$1" = "-n" ]; then
	IFS="
"
	for dev in $(grep mtu <<<"$cache" | cut -d : -f 1|sort -n); do
		if [ "$LAST" == "$ID" ]; then
			ID=$dev
			BRK=1
			break
		else
			LAST=$dev
		fi
	done
	if [ -z "$BRK" ]; then
		exit 0
	fi
fi

IFACE=$(grep "^${ID}: " <<<"$cache" | sed 's/[:@]\s/ /g'| cut -d " " -f 2)

echo ${BASE}.${ID}
if [ "X${IFACE}" = "X" ]; then
	echo noSuchName
else
	echo "string"
	distro=$(distro | cut -d " " -f 1)
	case $distro in
		[dD]ebian)
			cnf="/etc/network/interfaces"
		;;
		[gG]entoo)
			cnf="/etc/conf.d/net"
		;;
		*)
			cnf=""
		;;
	esac
	if [ -n "$cnf" ]; then
		echo $(grep "^# $IFACE:" $cnf | sed "s/^# $IFACE: //")
	else
		echo
	fi
fi
exit 0